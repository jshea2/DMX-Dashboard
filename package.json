{
  "name": "dmx-dashboard",
  "version": "1.0.0",
  "description": "Web-based DMX lighting control for faculty",
  "main": "electron/main.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "electron": "electron .",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"cross-env ELECTRON_START_URL=http://127.0.0.1:3001 electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:all": "npm run build && electron-builder -mwl --x64 --arm64"
  },
  "keywords": [
    "dmx",
    "lighting",
    "sacn",
    "artnet"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "artnet": "^1.4.0",
    "cors": "^2.8.5",
    "e131": "^1.1.3",
    "express": "^4.18.2",
    "uuid": "^13.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.1",
    "png-to-ico": "^2.1.1"
  },
  "build": {
    "appId": "com.dmxdashboard",
    "productName": "DMX Dashboard",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "electron/**",
      "server/**",
      "client/build/**",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icons/icon.png",
      "artifactName": "${productName}-${version}-Mac-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "artifactName": "${productName}-${version}-Win-${arch}.${ext}",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "assets/icons/icon.png",
      "artifactName": "${productName}-${version}-Linux-${arch}.${ext}",
      "target": [
        "AppImage"
      ]
    }
  }
}
