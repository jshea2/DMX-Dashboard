{
    "name": "dmx-dashboard",
    "version": "1.0.4",
    "description": "Web-based DMX lighting control for faculty",
    "main": "electron/main.js",
    "scripts": {
        "start": "node server/server.js",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon server/server.js",
        "client": "cd client && npm start",
        "build": "cd client && npm run build",
        "install-all": "npm install && cd client && npm install",
        "electron": "electron .",
        "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"cross-env ELECTRON_START_URL=http://127.0.0.1:3001 electron .\"",
        "electron:build": "npm run build && electron-builder",
        "electron:build:all": "npm run build && electron-builder -mwl --x64 --arm64",
        "electron:build:release": "node scripts/clean-dist.js && npm run build && electron-builder -m --x64 && node scripts/stash-mac-yml.js && electron-builder -m --arm64 && node scripts/finalize-mac-yml.js && electron-builder -w --x64 -l --x64 && node scripts/collect-release.js"
    },
    "keywords": [
        "dmx",
        "lighting",
        "sacn",
        "artnet"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "artnet": "^1.4.0",
        "cors": "^2.8.5",
        "e131": "^1.1.3",
        "electron-updater": "^6.3.0",
        "express": "^4.18.2",
        "uuid": "^13.0.0",
        "ws": "^8.14.2"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^31.3.1",
        "electron-builder": "^24.13.3",
        "nodemon": "^3.0.1",
        "png-to-ico": "^2.1.1"
    },
    "build": {
        "appId": "com.dmxdashboard",
        "productName": "DMX Dashboard",
        "artifactName": "DMX-Dashboard-${version}-${os}-${arch}.${ext}",
        "publish": [
            {
                "provider": "github",
                "owner": "jshea2",
                "repo": "DMX-Dashboard"
            }
        ],
        "files": [
            "electron/**",
            "server/**",
            "client/build/**",
            "package.json"
        ],
        "mac": {
            "icon": "assets/icons/icon.png",
            "artifactName": "DMX-Dashboard-${version}-Mac-${arch}.${ext}",
            "target": [
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "win": {
            "icon": "assets/icons/icon.ico",
            "artifactName": "DMX-Dashboard-${version}-Win-${arch}.${ext}",
            "target": [
                "nsis"
            ]
        },
        "linux": {
            "icon": "assets/icons/icon.png",
            "artifactName": "DMX-Dashboard-${version}-Linux-${arch}.${ext}",
            "target": [
                "AppImage"
            ]
        }
    }
}
